#include<stdio.h>

int main(){
    int n;
    printf("enter the number :");
    scanf("%d",&n);
    for(int i=0;i<n;i++)
    {
        printf("%d",i);
    }
    for(int i=n;i>0;i--)
    {
        printf("%d",i);
    }
    
    for(i=0;i<n;i++){
        for(j=0;j<=i;j++)
        {
            printf("*");
            }
            printf("\n");
            }
            
            
 printf(" run again to enter the number"); 
 printf("hello from vs code"); 
 printf("again hello from vscode this y");  
 printf("hello fro brach qahirunnisa")      
            
}
